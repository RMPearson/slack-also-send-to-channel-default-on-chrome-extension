{
  "name": "Slack \"Also send to #Channel\" Default On",
  "version": "1.0.3",
  "description": "A tiny extension to check the \"Also send to #Channel\" checkbox by default.",
  "permissions": ["activeTab", "declarativeContent"],
  "content_scripts": [{
    "js": ["content.js"],
    "matches": [
      "http://*.slack.com/messages/*",
      "https://*.slack.com/messages/*",
      "http://*.slack.com/unreads/*",
      "https://*.slack.com/unreads/*"
    ],
    "run_at": "document_idle"
  }],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "manifest_version": 2
}
